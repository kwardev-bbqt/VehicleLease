@model IEnumerable<VehicleLease.Models.Domain.Client>

@{
    ViewBag.Title = "Client Management";
}

<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="header-content">
            <h1><i class="fas fa-user-tie"></i> Client Portfolio</h1>
            <a href="@Url.Action("Create")" class="btn btn-premium">
                <i class="fas fa-plus-circle"></i> New Client
            </a>
        </div>
        <div class="search-filter">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Search clients...">
            </div>
        </div>
    </div>

    <div class="card-view">
        <div class="card-header">
            <h3><i class="fas fa-building"></i> Corporate Clients</h3>
            <span class="badge bg-primary">@Model.Count() Total</span>
        </div>

        <div class="table-card">
            <table class="elegant-table">
                <thead>
                    <tr>
                        <th class="sortable">
                            @Html.DisplayNameFor(model => model.CompanyName)
                            <i class="fas fa-sort"></i>
                        </th>
                        <th class="actions-header">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="hover-animate">
                            <td>
                                <div class="client-info">
                                    <div class="client-avatar">
                                        <i class="fas fa-building"></i>
                                    </div>
                                    <div>
                                        <strong>@Html.DisplayFor(modelItem => item.CompanyName)</strong>
                                        <small>Last updated: @DateTime.Now.ToString("MMM dd, yyyy")</small>
                                    </div>
                                </div>
                            </td>
                            <td class="actions-cell">
                                <div class="action-buttons">
                                    <a href="@Url.Action("Edit", new { id = item.ClientId })" class="btn btn-icon btn-edit" title="Edit">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.ClientId })" class="btn btn-icon btn-details" title="Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.ClientId })" class="btn btn-icon btn-delete" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                    <a href="#" class="btn btn-icon btn-more" title="More">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="table-footer">
            <div class="pagination">
                <button class="page-btn"><i class="fas fa-chevron-left"></i></button>
                <span class="page-active">1</span>
                <button class="page-btn">2</button>
                <button class="page-btn">3</button>
                <button class="page-btn"><i class="fas fa-chevron-right"></i></button>
            </div>
            <div class="view-options">
                <span>View:</span>
                <select class="form-select-sm">
                    <option>10</option>
                    <option>25</option>
                    <option>50</option>
                </select>
            </div>
        </div>
    </div>
</div>