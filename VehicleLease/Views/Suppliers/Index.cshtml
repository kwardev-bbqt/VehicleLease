@model IEnumerable<VehicleLease.Models.Domain.Supplier>

@{
    ViewBag.Title = "Supplier Network";
}

<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="header-content">
            <h1><i class="fas fa-truck"></i> Supplier Network</h1>
            <a href="@Url.Action("Create")" class="btn btn-premium">
                <i class="fas fa-plus-circle"></i> New Supplier
            </a>
        </div>
        <div class="search-filter">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Search suppliers...">
            </div>
        </div>
    </div>

    <div class="card-view">
        <div class="card-header">
            <h3><i class="fas fa-warehouse"></i> Active Suppliers</h3>
            <span class="badge bg-primary">@Model.Count() Suppliers</span>
        </div>

        <div class="table-card">
            <table class="elegant-table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th class="actions-header">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="hover-animate">
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="actions-cell">
                                <div class="action-buttons">
                                    <a href="@Url.Action("Edit", new { id = item.SupplierId })" class="btn btn-icon btn-edit" title="Edit">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.SupplierId })" class="btn btn-icon btn-details" title="Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.SupplierId })" class="btn btn-icon btn-delete" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="table-footer">
            <!-- Same pagination as Client view -->
        </div>
    </div>
</div>